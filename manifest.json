{
  "name": "History Disabler",
  "version": "2.1.0",
  "manifest_version": 2,
  "description": "Disable history in Chrome by deleting history when responsible tabs are closed.",
  "background": {
    "scripts": ["/js/background.js"],
    "persistent": true
  },
  "icons": {
    "128": "/img/icon128.png"
  },
  "options_ui": {
        "page": "/html/options.html",
        "chrome_style": true,
        "open_in_tab": false
    },
  "permissions": [
    "browsingData",
    "history",
    "downloads",
    "storage",
    "tabs"
  ]
}
